{
  "cucumber.features": [
    "features/**/*.feature"
  ],
  "cucumber.glue": [
    "step-definitions/**/*.ts",
    "step-definitions/**/*.ts"
  ],
  "cucumber.snippets.includeActor": false,
  "cucumber.completion.enable": true,
  "cucumber.gherkin.showReferencesCodeLens": true,
  "cucumber.gherkin.showImplementationCodeLens": true,
  "cucumber.gherkin.showStepReferencesCodeLens": true,
  "cucumber.parameterTypes": [],
  "files.associations": {
    "*.feature": "cucumber"
  },
  "editor.quickSuggestions": {
    "comments": false,
    "strings": true,
    "other": true
  },
  "cucumber.stepDefinitions": [
    {
      "pattern": "step-definitions/**/*.ts",
      "source": "typescript"
    },
    {
      "pattern": "step-definitions/**/*.*.ts",
      "source": "typescript"
    }
  ]
}